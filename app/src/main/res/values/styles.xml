<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="peakHeader" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/peakBrown</item>
        <item name="android:textSize">50dp</item>
        <item name="android:layout_height">77dp</item>
    </style>

    <style name= "AppTheme.ClaimPeakPopUp">
        <item name = "android:windowIsTranslucent">true</item>
    </style>

    <style name="DialogFragmentStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
    </style>
</resources>
