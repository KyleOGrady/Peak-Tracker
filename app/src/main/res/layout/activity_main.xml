<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/lightBlue"
    android:orientation="vertical"
    android:weightSum="3">

    <TextView
        android:id="@+id/main_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/mountains_4_claim"
        android:gravity="center"
        android:text="Peak Tracker"
        android:textColor="@color/nearWhite"
        android:textSize="30dp" />

    <!-- Northeast 115 -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/ne_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@drawable/home_background_2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ne_mtn"
            android:layout_width="256dp"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/progress_graphic_1_overlay"
            app:layout_constraintBottom_toBottomOf="@id/ne_layout"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/ne_layout"
            app:layout_constraintRight_toRightOf="@id/ne_layout"
            app:layout_constraintTop_toTopOf="@id/ne_layout"
            app:layout_constraintVertical_bias="0.619" />

        <TextView
            android:id="@+id/ne_title"
            android:layout_width="162dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:text="Northeast 115"
            android:textColor="@color/lightestBlue"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/ne_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="113/115"
            android:textColor="@color/lightestBlue"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.961"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.556" />

    </android.support.constraint.ConstraintLayout>

    <!-- ADK -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/adk_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="@drawable/home_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adk_mtn"
            android:layout_width="256dp"
            android:layout_height="150dp"
            android:src="@drawable/progress_graphic_1_overlay"
            app:layout_constraintBottom_toBottomOf="@id/adk_layout"
            app:layout_constraintHorizontal_bias="0.006"
            app:layout_constraintLeft_toLeftOf="@id/adk_layout"
            app:layout_constraintRight_toRightOf="@id/adk_layout"
            app:layout_constraintTop_toTopOf="@id/adk_layout" />

        <TextView
            android:id="@+id/adk_title"
            android:layout_width="163dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:textColor="@color/lightestBlue"
            android:text="Adirondack 46"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/adk_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="32/46"
            android:textSize="40sp"
            android:textColor="@color/lightestBlue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.961"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.556" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="20dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

    </android.support.constraint.ConstraintLayout>

    <!-- New Hampshire -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/nh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/home_background_3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nh_mtn"
            android:layout_width="256dp"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/progress_graphic_1_overlay"
            app:layout_constraintBottom_toBottomOf="@id/nh_layout"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/nh_layout"
            app:layout_constraintRight_toRightOf="@id/nh_layout"
            app:layout_constraintTop_toTopOf="@id/nh_layout"
            app:layout_constraintVertical_bias="0.619" />

        <TextView
            android:id="@+id/nh_title"
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:textColor="@color/lightestBlue"
            android:text="New Hampshire 48"
            android:textAlignment="center"
            android:textSize="21sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/nh_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="46/48"
            android:textSize="40sp"
            android:textColor="@color/lightestBlue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.961"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.556" />

    </android.support.constraint.ConstraintLayout>


</LinearLayout>
