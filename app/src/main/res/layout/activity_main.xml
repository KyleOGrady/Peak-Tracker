<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/lightBlue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/main_header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/mountains_4_claim"
        android:gravity="center"
        android:text="Peak Tracker"
        android:textColor="@color/nearWhite"
        android:textSize="30dp" />

    <!-- Northeast 115 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ne115_display_button"
            android:layout_width="256dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:src="@drawable/progress_graphic"
            android:text="NE115: 45/115"
            android:textColor="@color/nearWhite"
            android:textSize="50sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Northeast 115: 40/115" />

    </LinearLayout>

    <!-- ADK -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adk_display_button"
            android:layout_width="256dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:src="@drawable/progress_graphic"
            android:text="Adirondack 46: 45/46"
            android:textColor="@color/nearWhite"
            android:textSize="50sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Northeast 115: 40/115" />

    </LinearLayout>

    <!-- New Hampshire -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nh_display_button"
            android:layout_width="256dp"
            android:layout_height="150dp"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:src="@drawable/progress_graphic"
            android:text="New Hampshire 48: 45/48"
            android:textColor="@color/nearWhite"
            android:textSize="50sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Northeast 115: 40/115" />

    </LinearLayout>


</LinearLayout>
